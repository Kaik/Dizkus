{% macro drawTree(items) %}
    {% for item in items %}
        <li class="clearfix">
            <div class="noajax-actions col-md-1">
                {% if not loop.first %}
                    <a class="btn btn-xs tooltips" href="{{ path('zikuladizkusmodule_admin_changeforumorder', {'forum': item.forum_id, 'action': 'moveUp'})}}" title='{{ __("move up")}}'>
                        <i class="fa fa-arrow-up"></i>
                    </a>
                {% endif %}
                {% if not loop.last %}
                    <a class="btn btn-xs tooltips" href="{{ path('zikuladizkusmodule_admin_changeforumorder', {'forum': item.forum_id, 'action': 'moveDown'})}}"  title='{{ __("move down")}}'>
                        <i class="fa fa-arrow-down"></i>
                    </a>
                {% endif %}
            </div>
            <span class="tooltips" title='{{ __("Forum #{item.name}")}}'>
                {% if item.name is constant('Zikula\\DizkusModule\\Entity\\ForumEntity::ROOTNAME') %}
                    <strong>{{ __('Forum index') }}</strong>
                {% else %}
                    {{ item.name }}
                {% endif %}
            </span>
            <span class="noajax-actions text-right">
                <a class="btn btn-xs tooltips" href="{{ path('zikuladizkusmodule_admin_modifyforum', {'id': item.forum_id})}}" title='{{ __("edit forum #{item.name}")}}'><i class="fa fa-pencil"></i></a>
                <a class="btn btn-xs tooltips" href="{{ path('zikuladizkusmodule_forum_viewforum', {'forum': item.forum_id})}}" title='{{ __("view forum #{item.name}")}}'><i class="fa fa-eye fa-blue"></i></a>
                <a class="btn btn-xs tooltips" href="{{ path('zikuladizkusmodule_admin_deleteforum', {'id': item.forum_id})}}" title='{{ __("delete forum #{item.name}")}}'><i class="fa fa-trash-o fa-red"></i></a>
            </span>
            {% if item.__children > 0 %}
                <ul class="" style="list-style:none;">
                    {{ _self.drawTree(item.__children)}}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
{% endmacro %}

